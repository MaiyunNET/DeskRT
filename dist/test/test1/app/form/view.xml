<form width="400" min-width="300" height="400" min-height="400" title="View Test" padding="20">
    <layout gutter="10" direction="v">
        <view :scroll-offset.sync="so" style="background: #FFF;" flex="1">
            <block v-for="line of lineCount" style="padding: 2px 0;">Line {{line}}.</block>
        </view>
        <label>Scroll offset: {{so}}.</label>
        <view :scroll-offset.sync="so2" style="background: #FFF;" flex="1" direction="h">
            <layout v-for="line of lineCount" flex="" align-v="center" style="padding: 0 5px; border-right: 1px solid rgba(0, 0, 0, .1); display: inline-block; height: 100%;">Col {{line}}.</layout>
        </view>
        <label>Scroll offset: {{so2}}.</label>
        <layout gutter="10" flex="">
            <button @tap="lineCount += 10" padding="0 10" flex="1">Add 10 lines</button>
            <button @tap="lineCount += 50" padding="0 10" flex="1">Add 50 lines</button>
        </layout>
    </layout>
</form>