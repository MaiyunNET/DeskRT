<form width="400" min-width="300" height="400" min-height="400" title="View Test" padding="10">
    <tab flex="1">
        <tab-panel label="normal" style="padding: 10px;">
            <layout flex="1" gutter="10" direction="v">
                <layout flex="1" gutter="10">
                    <view :scroll-offset.sync="so" style="border: 1px solid rgba(0, 0, 0, .1);" flex="1" @resize="c = arguments[0]" @change="l = arguments[0]" :style="{'line-height': style ? '1.5' : undefined}" :padding="style ? '10' : undefined">
                        <block v-for="(line, index) of lineCount">
                            <button v-if="index > 0 && index % 10 === 0">test</button>
                            <block v-else>Line {{line}}, index: {{index}}.</block>
                        </block>
                    </view>
                    <layout flex="1" style="border: 1px solid rgba(0, 0, 0, .1);">
                        <view :scroll-offset.sync="so3" flex="1" @resize="c3 = arguments[0]" @change="l3 = arguments[0]" :style="{'line-height': style ? '1.5' : undefined}" :padding="style ? '10' : undefined">
                            <block v-for="(line, index) of lineCount">
                                <block v-if="index > 0 && index % 10 === 0" style="margin: auto; background: red; width: 60%; height: 30px; color: #FFF; text-align: center; line-height: 30px;">Custom</block>
                                <block v-else>Line {{line}}, index: {{index}}.</block>
                            </block>
                        </view>
                        <scroll width="20" :length="l3" :client="c3" :scroll-offset.sync="so3"></scroll>
                    </layout>
                </layout>
                <label>Scroll offset: {{so}}, Length: {{l}}, Client: {{c}}.</label>
                <view :scroll-offset.sync="so2" style="border: 1px solid rgba(0, 0, 0, .1);" flex="1" direction="h" @resize="c2 = arguments[0]" @change="l2 = arguments[0]" :style="{'line-height': style ? '1.5' : undefined}" :padding="style ? '10' : undefined">
                    <layout v-for="(line, index) of lineCount" align-v="center" direction="v" style="padding: 0 5px; border-right: 1px solid rgba(0, 0, 0, .1);">
                        <label>Col {{line}}.</label>
                        <label>index: {{index}}.</label>
                    </layout>
                </view>
                <label>Scroll offset: {{so2}}, Length: {{l2}}, Client: {{c2}}.</label>
                <layout gutter="10">
                    <button @tap="lineCount += 10" padding="0 10" flex="1">Add 10 lines</button>
                    <button @tap="lineCount += 50" padding="0 10" flex="1">Add 50 lines</button>
                </layout>
                <layout gutter="10">
                    <button @tap="lineCount -= 10;if(lineCount < 0) {lineCount = 0;}" padding="0 10" flex="1">Remove 10 lines</button>
                    <button @tap="style = !style" padding="0 10" flex="1">Change style</button>
                </layout>
            </layout>
        </tab-panel>
        <tab-panel label="adaptation" style="padding: 10px;">
            <layout flex="1" gutter="10" direction="v">
                <layout flex="1" direction="v">
                    <view style="border: 1px solid rgba(0, 0, 0, .1); max-height: 100%;">
                        <block v-for="(line, index) of lineCount">
                            <button v-if="index > 0 && index % 10 === 0">test</button>
                            <block v-else>Line {{line}}, index: {{index}}.</block>
                        </block>
                    </view>
                </layout>
                <layout gutter="10">
                    <button @tap="lineCount += 10" padding="0 10" flex="1">Add 10 lines</button>
                    <button @tap="lineCount -= 10;if(lineCount < 0) {lineCount = 0;}" padding="0 10" flex="1">Remove 10 lines</button>
                </layout>
            </layout>
        </tab>
    </tab>
</form>