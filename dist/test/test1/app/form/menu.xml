<form width="300" height="500" title="Menu">
    <layout flex="1" direction="v" gutter="10" style="padding: 10px;">
        <label>Radio, Check, Split:</label>
        <menu-list>
            <menu-list-item alt="A" text="Item1"></menu-list-item>
            <menu-list-item alt="B" text="Item2"></menu-list-item>
            <menu-list-item alt="G" text="Radio">
                <menu-list>
                    <menu-list-item type="radio" alt="H" text="Radio1" v-model="radio" label="radio1"></menu-list-item>
                    <menu-list-item type="radio" alt="I" text="Radio2" v-model="radio" label="radio2"></menu-list-item>
                    <menu-list-split></menu-list-split>
                    <menu-list-item alt="J" text="Check">
                        <menu-list>
                            <menu-list-item type="check" alt="K" text="Check1" v-model="check1"></menu-list-item>
                            <menu-list-item type="check" alt="L" text="Check2" v-model="check2"></menu-list-item>
                        </menu-list>
                    </menu-list-item>
                </menu-list>
            </menu-list-item>
        </menu-list>
        <label>Basic:</label>
        <menu-list>
            <menu-list-item alt="C" text="Item1"></menu-list-item>
            <menu-list-item alt="D" text="Item2">
                <menu-list>
                    <menu-list-item alt="M" text="Item3"></menu-list-item>
                    <menu-list-item alt="N" text="Item4"></menu-list-item>
                    <menu-list-item alt="R" text="Item5" :disabled="true"></menu-list-item>
                </menu-list>
            </menu-list-item>
        </menu-list>
        <label>Bar:</label>
        <menu>
            <menu-item alt="O" text="Item1">
                <menu-list>
                    <menu-list-item alt="S" text="Item4"></menu-list-item>
                </menu-list>
            </menu-item>
            <menu-item alt="P" text="Item2">
                <menu-list>
                    <menu-list-item alt="U" text="Item6"></menu-list-item>
                </menu-list>
            </menu-item>
            <menu-item alt="Q" text="Item3" :disabled="true">
                <menu-list>
                    <menu-list-item alt="T" text="Item5"></menu-list-item>
                </menu-list>
            </menu-item>
            <menu-item alt="Q" text="Item7"></menu-item>
        </menu>
    </layout>
</form>