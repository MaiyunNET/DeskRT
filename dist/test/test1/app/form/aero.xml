<form width="300" height="300" min-height="250" :resize="resize" :state-max="max" title="Aero" border="none" background="transparent">
    <layout align-h="center" align-v="center" direction="v" @down="bindMove" class="aero">
        <button :focus="focus" @tap="closeForm" padding="0 15">Close</button>
        <button :focus="focus" @tap="resizeMethod" padding="0 15" style="margin-top: 15px;">{{resize ? 'Disable' : 'Enable'}} resize</button>
        <button :focus="focus" @tap="maxMethod" padding="0 15" style="margin-top: 15px;">{{max ? 'Restore' : 'Max'}}</button>
    </layout>
</form>