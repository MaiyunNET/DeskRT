<form title="Create new task" icon="/new.svg" width="300" height="220" :min="false" :max="false" :resize="false">
    <layout style="padding: 20px; background: #FFF;">
        <layout align-v="center">
            <img src="/icon.svg" width="32" height="32"></img>
            <label flex="1" style="margin-left: 20px;">Enter the CGA's URL and the program will try to run.</label>
        </layout>
    </layout>
    <layout flex="" align-h="end" gutter="10" style="padding: 20px;">
        <button width="80">OK</button>
        <button width="80" @tap="closeForm">Cancel</button>
    </layout>
</form>